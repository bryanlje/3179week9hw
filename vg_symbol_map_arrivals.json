{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1280,
  "height": 720,
  "projection": {"type": "mercator"},
  "title": "Malaysia's Points of Entry",
  "view": {
    "fill": "#dffeff",
    "stroke": "transparent"
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/bryanlje/3179week9hw/main/output.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_1"}
      },
      "mark": {"type": "geoshape", "stroke": "#c0ceeb", "strokeWidth": 0.5, "fill": null}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/bryanlje/3179week9hw/main/output.json",
        "format": { "type": "topojson", "feature": "my" }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#e9ffe1",
        "stroke": "#0a5725",
        "strokeWidth": 1
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/bryanlje/3179week9hw/main/output.json",
        "format": { "type": "topojson", "feature": "my" }
      },
      "mark": { 
        "type": "geoshape", 
        "fill": "#b1ffae", 
        "stroke": "#489c35", 
        "strokeWidth": 1 
    }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/bryanlje/3179week9hw/main/arrivals_record.csv",
        "format": { "type": "csv", "parse": { "date": "date" } }
      },
      "transform": [
        {
          "aggregate": [
            { "op": "sum", "field": "arrivals", "as": "arrivals_total" },
            { "op": "sum", "field": "arrivals_male", "as": "arrivals_male" },
            { "op": "sum", "field": "arrivals_female", "as": "arrivals_female" }
          ],
          "groupby": ["poe"]
        },
        {
          "lookup": "poe",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/bryanlje/3179week9hw/main/points_of_entry.csv",
              "format": { "type": "csv", "parse": { "lat": "number", "long": "number" } }
            },
            "key": "poe",
            "fields": ["lat", "long", "type", "state", "abb", "iso"]
          }
        },
        { "filter": "isValid(datum.lat) && isValid(datum.long)" }
      ],
      "mark": { "type": "circle", "opacity": 0.9, "stroke": "white", "strokeWidth": 0.6, "tooltip": {"content":"data"} },
      "encoding": {
        "longitude": { "field": "long", "type": "quantitative" },
        "latitude":  { "field": "lat",  "type": "quantitative" },
        "size": {
          "field": "arrivals_total",
          "type": "quantitative",
          "title": "Total Arrivals",
          "scale": { "type": "sqrt", "range": [30, 1200] }
        },
        "color": { 
            "field": "type", 
            "type": "nominal", 
            "title": "Point of Entry Type",
            "scale": {
                "domain": ["Land", "Air", "Sea"],
                "range": ["#E69F00", "#3da7d4", "#008a57"] 
            }
        },
        "tooltip": [
          { "field": "poe", "title": "Point of Entry" },
          { "field": "state", "title": "State" },
          { "field": "type", "title": "Type" },
          { 
            "field": "arrivals_total", 
            "type": "quantitative", 
            "title": "Total Arrivals (all years)", 
            "format": "," 
        },
        { 
            "field": "arrivals_male", 
            "type": "quantitative", 
            "title": "Male Arrivals (all years)", 
            "format": "," 
        },
        { 
            "field": "arrivals_female", 
            "type": "quantitative", 
            "title": "Female Arrivals (all years)", 
            "format": "," 
        }
        ]
      }
    }
  ]
}